<Page x:Class="WpfApplicationMobi.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApplicationMobi"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Page2">

    <Grid>
        <Button x:Name="button" Content="Haut" HorizontalAlignment="Left" Margin="61,10,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Button x:Name="button2" Content="Bas" HorizontalAlignment="Left" Margin="171,10,0,0" VerticalAlignment="Top" Width="75" Click="button_Click_bas"/>
        <ScrollBar x:Name="scrollBar" HorizontalAlignment="Left" Margin="10,29,0,0" VerticalAlignment="Top" Height="231" ValueChanged="scrollBar_ValueChanged"/>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="208" Margin="61,52,0,0" VerticalAlignment="Top" Width="214" SelectionChanged="listView_SelectionChanged" Grid.Column="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="214"  DisplayMemberBinding="{Binding Nom}"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
